<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:navigationBarColor">@color/dark_dark_gray</item>
        <item name="colorAccent">@android:color/white</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:background">@color/dark_dark_gray</item>

    </style>

    <style name="PopupTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/dark_gray</item>
        <item name="colorSurface">@color/dark_gray</item>
    </style>



    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorAlertDialogListItem">@android:color/white</item>
        <item name="android:background">@color/gray</item>
    </style>


</resources>
